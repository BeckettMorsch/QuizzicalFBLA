                <Grid VerticalOptions="End">
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height ="80" />
                        <RowDefinition Height ="80" />
                        <RowDefinition Height ="80" />
                        <RowDefinition Height ="80" />
                    </Grid.RowDefinitions>



                    <Frame CornerRadius="5"  
                           BackgroundColor="White"
                           Padding="0"
                           Grid.Row="0"
                           Grid.Column="0"
                           Margin="2,2,2,2">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Button1Clicked"/>
                        </Frame.GestureRecognizers>
                        <StackLayout Padding="15,15,15,15" >
