<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizzicalFBLA.Views.QuestionPage"
             NavigationPage.HasBackButton="False">
 
    <ContentPage.Content>
        <StackLayout BackgroundColor="#3b3e48">
                <StackLayout IsVisible="{Binding ShowQuestion}">
                <!-- Place new controls here -->
                <Label Text="{Binding Question.Category}"
                   TextColor="White"    
                   FontSize="24"      
                   FontAttributes="Bold"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

                <Label Text="{Binding Question.Question}" 
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand"
                       FontSize="Medium"
                       TextColor="White"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200" />
                        <RowDefinition Height ="200" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" Text="{Binding Question.Answer1}" BackgroundColor="#ff6666"
                    FontAttributes="Bold" TextColor="Black" Clicked="Button1Clicked"/>
                    <Button Grid.Row="0" Grid.Column="1" Text="{Binding Question.Answer2}" BackgroundColor="#4d4dff" 
                    FontAttributes="Bold" TextColor="Black" Clicked="Button2Clicked"/>
                    <Button Grid.Column="0" Grid.Row="1" Text="{Binding Question.Answer3}" BackgroundColor="#ffffb3"
                    FontAttributes="Bold" TextColor="Black" VerticalOptions="FillAndExpand" Clicked="Button3Clicked"/>
                    <Button Grid.Column="1" Grid.Row="1" Text="{Binding Question.Answer4}" BackgroundColor="#99ff99"
                    FontAttributes="Bold" TextColor="Black" VerticalOptions="FillAndExpand" Clicked="Button4Clicked"/>
                </Grid>

            </StackLayout>
            <StackLayout  BackgroundColor="#3b3e48" IsVisible="{Binding ShowAnswer}" VerticalOptions="CenterAndExpand">
                <!--<Image Source="file.png" IsVisible="{Binding IsAnswerVisible}"/>-->
                <Label Text="{Binding Message}"                              
                       FontSize="Large"
                       BackgroundColor="#4f535d"
                       TextColor="White"
                       VerticalOptions="CenterAndExpand" 
                       HorizontalOptions="CenterAndExpand" />


                <Grid HorizontalOptions="CenterAndExpand">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Frame CornerRadius="10"  
                           BackgroundColor="#00d5dd"
                           Padding="0"
                           Grid.Column="1">
                        <StackLayout>
                            <Button Text="Tap to Continue"
                            FontSize="Medium"
                            TextColor="White"    
                            BackgroundColor="Transparent"
                            Clicked="NextQuestion"/>

                        </StackLayout>
                    </Frame>
                </Grid>    

            </StackLayout>
           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>