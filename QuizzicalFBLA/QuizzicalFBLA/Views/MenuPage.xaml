<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizzicalFBLA.Views.MenuPage"
             Title="Menu"
             Icon="hamburger.png">
    <StackLayout VerticalOptions="FillAndExpand" >
        <Grid             HeightRequest="150" 
                          HorizontalOptions="FillAndExpand" 
                          BackgroundColor="LightSlateGray"
                          Padding="0,30,0,0">
            <Image Source="QuizzicalLogo.png" VerticalOptions="Center" HeightRequest="125" Aspect="AspectFit" Margin="10,10,10,10"/>
        </Grid>
        <ListView x:Name="ListViewMenu"
                    HasUnevenRows="True"
                    Margin="0,10,0,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10" Orientation="Horizontal" VerticalOptions="Center">
                            <Image Source="{Binding Icon}" WidthRequest="32" HeightRequest="32"/>
                            <Label Text="{Binding Title}" FontSize="20" Margin="20,0,0,0"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>